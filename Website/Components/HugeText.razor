@using Website.Services


@code {
    [CascadingParameter] public WebsiteTheme WebsiteTheme { get; set; }
    [Parameter] public string TheText { get; set; } = "";

    [Parameter] public string Style { get; set; } = "";

}
<div class="main-div" 
     style="color: @(WebsiteTheme == WebsiteTheme.Dark ? "white" : "black");
         background-color: @WebsiteTheme.GetThemeDefaults().DefaultBackgroundColor;
@Style">
   <h1>@TheText</h1>
</div>