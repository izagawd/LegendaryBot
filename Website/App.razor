@using Website.Pages
@using Website.Pages.Authentication
@using Website.Components


<ErrorBoundary >
    <ErrorContent>
        <AppError></AppError>
        <PageTitle>Error</PageTitle>
    </ErrorContent>
    <ChildContent>
        <CascadingAuthenticationState>
            <Router AppAssembly="@typeof(App).Assembly">
                <Found Context="routeData">
                    <AuthorizeRouteView RouteData="@routeData">
                        <NotAuthorized>
                            <Login></Login>
                        </NotAuthorized>
                        <Authorizing>
                            <PageText TheText="Authorizing..."></PageText>
                        </Authorizing>
                    </AuthorizeRouteView>
                </Found>
                <NotFound>
                    <PageTitle>Not found</PageTitle>
                </NotFound>
            </Router>
        </CascadingAuthenticationState>
    </ChildContent>
</ErrorBoundary>