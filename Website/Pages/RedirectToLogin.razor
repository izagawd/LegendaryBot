@page "/RedirectToLogin"
@using Blazored.LocalStorage
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@using PublicInfo
@inject NavigationManager Man
@inject HttpClient HttpClient
@inject AuthenticationStateProvider provider
@inject ILocalStorageService StorageService
@code {

    protected override async Task OnInitializedAsync()
    {
 
        Man
            .NavigateTo($"https://discord.com/oauth2/authorize?client_id={Information.DiscordClientId}&scope=identify&response_type=code&redirect_uri=" +
                        $"{Uri.EscapeDataString($"{Information.WebsiteDomainName}/authentication/callback")}");

    }

}