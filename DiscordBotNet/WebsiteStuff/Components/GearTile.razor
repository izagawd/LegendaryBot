@using BattleManagemen.LegendaryBot
@using Entities.LegendaryBot
@using Entities.LegendaryBot.Entities.BattleEntities.Gears

@code {
    [Parameter] public int Size { get; set; } = 200;
    [Parameter] public Gear? Gear { get; set; }
    [Parameter] public Type? SupposedGearType { get; set; }
}

<div>
    @{
        var color = "white";
        switch (Gear?.Rarity)
        {
            case Rarity.TwoStar:
                color = "green";
                break;
            case Rarity.ThreeStar:
                color = "blue";
                break;
            case Rarity.FourStar:
                color = "purple";
                break;
            case Rarity.FiveStar:
                color = "yellow";
                break;
        }
    }

    @code

    {

    }

    <img src="@Gear?.ImageUrl" style=" background-color: @color;" width="@Size" height="@Size" class="image-box"/>
    <p>
        @(Gear?.Name ?? TypesFunction.GetDefaultObjectsAndSubclasses<Gear>().FirstOrDefault(i => i.GetType() == SupposedGearType)?.Name
        )
    </p>
    <p>Number: @Gear?.Number</p>

</div>