@using DiscordBotNet.LegendaryBot
@using DiscordBotNet.LegendaryBot.Entities.BattleEntities.Blessings
@using DiscordBotNet.LegendaryBot.Entities.BattleEntities.Gears

@code {
[Parameter] public int Size { get; set; } = 150;
[Parameter] public Blessing? Blessing { get; set; }

}

<div>
    @{
    var color = "white";
    switch (Blessing?.Rarity)
    {
    case Rarity.TwoStar:
    color = "green";
    break;
    case Rarity.ThreeStar:
    color = "blue";
    break;
    case Rarity.FourStar:
    color = "purple";
    break;
    case Rarity.FiveStar:
    color = "yellow";
    break;
    }
    }
    @code

    {

    }
    <img src="@Blessing?.ImageUrl" style=" background-color: @color;" width="@Size" height="@Size" class="image-box"/>
    <p>@(Blessing?.Name ?? "Blessing")</p>
</div>