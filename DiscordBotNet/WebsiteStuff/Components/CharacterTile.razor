@using Entities.LegendaryBot

@code {
    [Parameter] public string Name { get; set; }
    [Parameter] public int Number { get; set; }
    [Parameter] public Rarity Rarity { get; set; }
    [Parameter] public string ImageUrl { get; set; }
    [Parameter] public bool Linkable { get; set; } = true;
    [Parameter] public int Size { get; set; } = 200;
    [Parameter] public int Level { get; set; }
}

<div>
    @{
        var color = "white";
        switch (Rarity)
        {
            case Rarity.TwoStar:
                color = "green";
                break;
            case Rarity.ThreeStar:
                color = "blue";
                break;
            case Rarity.FourStar:
                color = "purple";
                break;
            case Rarity.FiveStar:
                color = "yellow";
                break;
            default:
                throw new ArgumentOutOfRangeException();
        }
    }

    @if (Linkable)
    {
        <a href="/character-info/@Number">
            <img src="@ImageUrl" style=" background-color: @color;" width="@Size" height="@Size" class="image-box"/>
        </a>
    }
    else
    {
        <img src="@ImageUrl" style=" background-color: @color;" width="@Size" height="@Size" class="image-box"/>
    }


    <p>@Name</p>
    <p>Level: @Level</p>
    <p>Number: @Number</p>
</div>