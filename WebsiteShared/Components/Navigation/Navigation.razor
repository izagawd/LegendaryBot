@using System.Collections.Immutable
@code {

    [Parameter] public RenderFragment? ChildContent { get; set; }
    private class DirectoryStorer
    
    {
        
        public string Name { get; } 
        public string Directory { get; }
        public string Icon { get; }

        public DirectoryStorer(string name, string directory, string icon)
        {
            Name = name;
            Directory = directory;
            Icon = icon;
        }
    }
    private static readonly ImmutableArray<DirectoryStorer> Directories =
    [
        new("Home", "/","home"),
        new("Characters", "/characters","settings_accessibility"),

    ];

}
<HeadContent>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
</HeadContent>
<div class="navigator-outer">
    <div class="navigator-container">
        <div class="navigator-inner">
            <p>Legendary!!</p>
        </div>

        @foreach (var i in Directories)
        {
        <div class="link-container">

            <a href="@i.Directory">
                <span class="material-symbols-outlined nav-link-icon">
                    @i.Icon
                </span>
                <p>@i.Name</p>
            </a>
        </div>
        }

    </div>

    @if (ChildContent is not null)
    {
    <div style="width: 100%; height: 100%; overflow: auto; ">
        @ChildContent
    </div>
    }

</div>
