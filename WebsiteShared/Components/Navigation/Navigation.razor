@using System.Collections.Immutable

@code {

    [Parameter] public RenderFragment? ChildContent { get; set; }

    [Parameter]
    [EditorRequired] public WebsiteTheme Theme { get; set; }
    private string TextColor => Theme == WebsiteTheme.Dark ? "lightgrey" : "black";
    private string LinkContainerHovBgColorClass => Theme == WebsiteTheme.Dark ? "link-container-dark" : "link-container-light";
    private class DirectoryStorer

    {
        public string Name { get; }
        public string Directory { get; }
        public string Icon { get; }

        public DirectoryStorer(string name, string directory, string icon)
        {
            Name = name;
            Directory = directory;
            Icon = icon;
        }
    }

    private static readonly ImmutableArray<DirectoryStorer> Directories =
    [
        new DirectoryStorer("Home", "/", "home"),
        new DirectoryStorer("Characters", "/characters", "settings_accessibility")
    ];

}

<HeadContent>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0"/>
</HeadContent>
<div class="navigator-outer">
    <div class="navigator-container" style="background-color: @Theme.GetThemeDefaults().DefaultBackgroundColor ; 
        border-color: @(Theme == WebsiteTheme.Dark ? "darkgray" : "black")">
        <div class="navigator-inner">
            <p style="color: @TextColor;">Legendary!!</p>
        </div>

        @foreach (var i in Directories)
        {
            <div class="link-container @LinkContainerHovBgColorClass">

                <a href="@i.Directory">
                    <span class="material-symbols-outlined nav-link-icon" style="color: @(Theme == WebsiteTheme.Dark ? "white" : "black")">
                        @i.Icon
                    </span>
                    <p style="color: @TextColor">@i.Name</p>
                </a>
            </div>
        }
        <div>
            
            <span class="material-symbols-outlined" style=" color: @(Theme == WebsiteTheme.Dark ? "white" : "black")">
                dark_mode
            </span>
        </div>
    </div>

    @if (ChildContent is not null)
    {
        <div style="width: 100%; height: 100%; overflow: auto; ">
            @ChildContent
        </div>
    }

</div>